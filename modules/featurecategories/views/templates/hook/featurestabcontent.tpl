<div class="rte" id="idTabFeatures">    <table style="border-collapse:collapse; width:100%;">        <tbody>        {if $fc_features|@count > 0}            {foreach from=$fc_features key=k item=v}                <tr class="comparison_header">                    <td colspan=2>                        {$k}                        {if $helper->getDescription($k) !=null}                            <img src="{$smarty.const._PS_JS_DIR_}../modules/featurecategories/views/img/question_icon.gif"                                 style="float:right; margin:0px 5px 0px 0px" class="question_image"/>                            <div class="tooltip_val" style="display:none;">{$helper->getDescription($k)}</div>                        {/if}                    </td>                </tr>                {foreach from=$v item=fcFeature}                    {if not empty($fcFeature.value)}                        <tr>                            <td style="padding:3px; text-align:left; border: 1px solid #CDCDCD">{$fcFeature.name}                                {assign var=featureDescription value=$helper->getProductDescription($fcFeature.id_feature)}                                {if $featureDescription!=null}                                    <img src="{$smarty.const._PS_JS_DIR_}../modules/featurecategories/views/img/question_icon.gif"                                         style="float:right;margin:3px 5px 0px 0px" class="question_image"/>                                    <div class="tooltip_val" style="display:none;">{$featureDescription}</div>                                {/if}                            </td>                            <td style="padding:3px; text-align:left; border: 1px solid #CDCDCD">{$fcFeature.value}</td>                        </tr>                    {/if}                {/foreach}            {/foreach}        {/if}        </tbody>    </table></div>